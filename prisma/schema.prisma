generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma" // This output path is generated by default with npx prisma init sometimes
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// === YOU NEED TO ADD THIS MODEL BLOCK ===
model Trade {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sno         Int      @map("S_NO") // Ensure this is "S_NO"
  date        String
  strike      String
  buyingPrice Float
  exitPrice   Float
  target      String?
  high        String?
  profitLoss  String?
  totalPoints Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Updated User Model
model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName      String
  mobileNumber  String   @unique
  isVerified    Boolean  @default(true) // User is considered verified upon signup
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // Removed: otps          Otp[]
}